# .env.example
# Copy this file to .env and fill in your own values
# Never commit real secrets with the .env file!

# Backend Configuration
BACKEND_DOMAIN=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# JWT Configuration (generate with: openssl rand -base64 128)
JWT_SECRET=change-me-to-a-very-long-random-string-128-chars-min
JWT_ACCESS_TOKEN_EXPIRE=604800          # 7 days in seconds
JWT_REFRESH_TOKEN_EXPIRE=2592000       # 30 days in seconds

# PostgreSQL
POSTGRES_DB=blog
POSTGRES_USER=blog-user
POSTGRES_PASSWORD=change-me-in-production

# Use this format inside Docker:
# DATABASE_URL=postgresql://blog-user:blog-pass@postgres:5432/blog?schema=public
# Use this format locally (when running outside Docker):
DATABASE_URL=postgres://blog-user:change-me-in-production@localhost:5432/blog

# MinIO / S3 Compatible Storage
MINIO_ENDPOINT=minio                    # use "minio" in Docker, your domain in prod
MINIO_PORT=9000                         # 9000 in Docker, 443 in production with SSL
MINIO_USE_SSL=false                     # false locally, true in production
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=change-me-to-strong-secret
MINIO_BUCKET=blogging
MINIO_PUBLIC_URL=http://localhost:9000   # example: https://resource.loffy.me

# Admin User (will be created on first run â€“ change immediately!)
ADMIN_EMAIL=admin@loffy.me
ADMIN_PASSWORD=change-me-immediately
ADMIN_USERNAME=admin

# NextAuth.js
NEXTAUTH_SECRET=change-me-with-openssl-rand-base64-32-or-longer
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Google Analytics (GA4 Measurement ID)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX