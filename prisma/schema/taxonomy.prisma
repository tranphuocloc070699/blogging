model Taxonomy {
  id          Int      @id @default(autoincrement())
  name        String   @unique(map: "uk_taxonomies_name") @db.VarChar(100)
  slug        String   @unique(map: "uk_taxonomies_slug") @db.VarChar(100)
  description String?  @db.VarChar(500)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamp(6)
  terms       Term[]

  @@index([name], map: "idx_taxonomies_name")
  @@index([slug], map: "idx_taxonomies_slug")
  @@map("taxonomies")
}