model PostTerm {
  postId    Int      @map("post_id")
  termId    Int      @map("term_id")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_post_terms_post_id")
  term      Term     @relation(fields: [termId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_post_terms_term_id")

  @@id([postId, termId], map: "pk_post_terms")
  @@unique([postId, termId], map: "uk_post_terms_post_term")
  @@index([postId], map: "idx_post_terms_post_id")
  @@index([termId], map: "idx_post_terms_term_id")
  @@map("post_terms")
}
